/**index.wxss**/
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    min-height: 100vh;
}

.title {
    font-size: 44rpx;
    font-weight: bold;
    margin-bottom: 50rpx;
    color: #333;
    text-align: center;
}

.demo-cards {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 30rpx;
    margin-bottom: 50rpx;
}

.demo-card {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    position: relative;
}

.demo-card:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.demo-card.highlighted {
    border: 2rpx solid #1aad19;
    background-color: #f0fff0;
}

.card-title {
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
    color: #333;
}

.card-desc {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
}

.card-badge {
    position: absolute;
    top: -10rpx;
    right: -10rpx;
    background-color: #1aad19;
    color: white;
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 30rpx;
    font-weight: bold;
}

.footer {
    margin-top: auto;
    font-size: 24rpx;
    color: #999;
    text-align: center;
    padding: 30rpx 0;
}