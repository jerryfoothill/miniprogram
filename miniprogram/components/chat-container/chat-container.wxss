.chat-container {
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.message-list {
    display: flex;
    flex-direction: column;
    padding: 20rpx 0;
    box-sizing: border-box;
    min-height: 100%;
}