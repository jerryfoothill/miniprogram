.input-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #f6f6f6;
    border-top: 1px solid #e6e6e6;
    padding: 8px 0;
    z-index: 100;
}

.input-container {
    display: flex;
    align-items: center;
    padding: 0 8px;
}

/* 语音/键盘切换按钮 */
.voice-switch {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 文本输入框 */
.text-input {
    flex: 1;
    height: 36px;
    background-color: #ffffff;
    border-radius: 4px;
    padding: 0 12px;
    font-size: 16px;
    line-height: 36px;
    margin: 0 8px;
}

.placeholder {
    color: #bbb;
}

/* 语音按钮 */
.voice-button {
    flex: 1;
    height: 36px;
    background-color: #ffffff;
    border-radius: 4px;
    margin: 0 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: #333;
}

.voice-button.holding {
    background-color: #e6e6e6;
}

/* 表情按钮 */
.emoji-button {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 发送按钮 */
.send-button {
    width: 60px;
    height: 36px;
    background-color: #07c160;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 15px;
}

/* 更多按钮 */
.more-button {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 加号图标 */
.plus-icon {
    font-size: 28px;
    font-weight: bold;
    color: #000;
    line-height: 1;
}

/* 图标样式 */
.icon {
    width: 24px;
    height: 24px;
}

/* 表情面板 */
.emoji-panel {
    background-color: #f9f9f9;
    padding: 10px;
    height: 200px;
    box-sizing: border-box;
}

.emoji-list {
    display: flex;
    flex-wrap: wrap;
    height: 160px;
    overflow-y: auto;
}

.emoji-item {
    width: 12.5%;
    height: 40px;
    font-size: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.emoji-actions {
    display: flex;
    justify-content: flex-end;
    padding-top: 10px;
}

.delete-button {
    width: 60px;
    height: 30px;
    background-color: #e6e6e6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
}

/* 功能面板 */
.feature-panel {
    background-color: #f6f6f6;
    padding: 15px 10px;
    border-top: 1px solid #e6e6e6;
    box-sizing: border-box;
}

.feature-grid {
    display: flex;
    flex-wrap: wrap;
}

.feature-item {
    width: 25%;
    padding: 10px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.feature-icon {
    width: 60px;
    height: 60px;
    background-color: #fff;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 6px;
}

.feature-icon image {
    width: 32px;
    height: 32px;
}

.feature-name {
    font-size: 12px;
    color: #333;
}