/* 聊天页面样式 */
.chat-page {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #EDEDED;
    color: #333;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    position: relative;
    padding-bottom: 52px;
    /* Add padding for input bar height */
    padding-left: 0;
    padding-right: 0;
    margin: 0;
}

/* 自定义导航栏右侧区域 */
.nav-more {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.nav-more-icon {
    display: flex;
    flex-direction: column;
    height: 16px;
    justify-content: space-between;
}

.nav-more-dot {
    width: 4px;
    height: 4px;
    background-color: #07c160;
    border-radius: 50%;
}

/* 更加具体的选择器来确保内容区域占满宽度 */
.chat-content.full-width-content {
    flex: 1;
    position: relative;
    overflow: hidden;
    background-color: #EDEDED;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    margin-top: 44px;
    /* Fixed height for navigation bar */
    height: calc(100vh - 44px - 52px - 52px);
    /* Subtract nav height, input bar height, and control bar height */
    width: 100%;
    padding: 0;
    margin: 0;
    max-width: none;
}

/* 自定义背景样式 - 移除背景点阵 */
.chat-content::before {
    content: none;
}

/* 更精确地针对聊天容器组件 */
.chat-page .full-width-content chat-container {
    width: 100%;
    max-width: none;
    padding: 0;
    margin: 0;
}

/* 控制栏样式 */
.control-bar {
    display: flex;
    justify-content: space-around;
    padding: 10px 16px;
    background-color: #f7f7f7;
    border-top: 1px solid #e6e6e6;
    height: 52px;
    box-sizing: border-box;
    width: 100%;
}

.control-button {
    padding: 8px 16px;
    background-color: #ffffff;
    color: #07C160;
    border-radius: 4px;
    text-align: center;
    font-size: 14px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.control-button.play {
    background-color: #07C160;
    color: #ffffff;
}

.control-button.pause {
    background-color: #ff9800;
    color: #ffffff;
}

.control-button.disabled {
    background-color: #f2f2f2;
    color: #999;
}

/* 聊天容器样式 */
.chat-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f1f1f1;
}

/* 头部样式 */
.chat-header {
    display: flex;
    align-items: center;
    padding: 10px 16px;
    height: 44px;
    background-color: #ffffff;
    border-bottom: 1px solid #e6e6e6;
    position: relative;
    z-index: 10;
}

.back-button {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.back-icon {
    width: 12px;
    height: 24px;
    position: relative;
}

.back-icon:before {
    content: '';
    position: absolute;
    width: 12px;
    height: 12px;
    border-left: 2px solid #333;
    border-bottom: 2px solid #333;
    transform: rotate(45deg);
}

.title {
    flex: 1;
    text-align: center;
    font-size: 17px;
    font-weight: bold;
    color: #333;
}

.more-button {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.more-icon {
    width: 20px;
    height: 20px;
    position: relative;
}

.more-icon:before,
.more-icon:after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background-color: #333;
    border-radius: 50%;
}

.more-icon:before {
    top: 7px;
    left: 8px;
}

.more-icon:after {
    top: 7px;
    left: 16px;
}

.more-icon:first-child:after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background-color: #333;
    border-radius: 50%;
    top: 15px;
    left: 12px;
}

/* 消息列表样式 */
.message-list {
    flex: 1;
    padding: 10px 16px;
    overflow-y: auto;
}

.time-divider {
    text-align: center;
    margin: 10px 0;
}

.time-divider text {
    display: inline-block;
    padding: 3px 8px;
    font-size: 12px;
    color: #999;
    background-color: rgba(0, 0, 0, 0.05);
    border-radius: 10px;
}

.message-item {
    display: flex;
    margin-bottom: 16px;
    position: relative;
    max-width: 100%;
    width: 100%;
}

.message-item.opponent {
    justify-content: flex-start;
}

.message-item.self {
    justify-content: flex-end;
}

.avatar {
    width: 40px;
    height: 40px;
    border-radius: 4px;
    margin-right: 10px;
    flex-shrink: 0;
}

.message-bubble {
    max-width: 70%;
    padding: 10px 14px;
    border-radius: 8px;
    position: relative;
    word-wrap: break-word;
    line-height: 1.4;
    font-size: 16px;
    text-align: left;
}

.opponent .message-bubble {
    background-color: #ffffff;
    color: #333;
    border: 1px solid #e6e6e6;
}

.self .message-bubble {
    background-color: #07C160;
    color: #fff;
}

.message-list-bottom {
    height: 10px;
}

/* 输入区域样式 */
.input-area {
    display: flex;
    align-items: center;
    padding: 8px 12px;
    background-color: #f7f7f7;
    border-top: 1px solid #e6e6e6;
}

.voice-button,
.emoji-button {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.voice-icon {
    width: 24px;
    height: 24px;
    background-color: #ccc;
    border-radius: 50%;
    position: relative;
}

.voice-icon:before {
    content: '';
    position: absolute;
    width: 8px;
    height: 12px;
    background-color: #fff;
    border-radius: 4px;
    top: 6px;
    left: 8px;
}

.emoji-icon {
    width: 24px;
    height: 24px;
    background-color: #ccc;
    border-radius: 50%;
    position: relative;
}

.emoji-icon:before {
    content: '';
    position: absolute;
    width: 12px;
    height: 12px;
    border: 2px solid #fff;
    border-radius: 50%;
    top: 4px;
    left: 4px;
    box-sizing: border-box;
}

.message-input {
    flex: 1;
    height: 36px;
    background-color: #ffffff;
    border-radius: 4px;
    border: 1px solid #e6e6e6;
    padding: 0 10px;
    margin: 0 8px;
    font-size: 14px;
}

.send-button {
    width: 60px;
    height: 36px;
    background-color: #f2f2f2;
    color: #999;
    border-radius: 4px;
    text-align: center;
    line-height: 36px;
    font-size: 14px;
}

.send-button.active {
    background-color: #07C160;
    color: #ffffff;
}